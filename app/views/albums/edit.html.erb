<fieldset>
<legend>Edit Album</legend>
<%= form_for @album ,url: album_path(@album) , method: :patch do |f| %>
	

	<%= f.label :name%> : 
	<%= f.text_field :name%>
	<%= f.label :description%> : 
	<%= f.text_field :description%><hr>

	<%= f.fields_for :photos do |photo_fields|%>
		<div id="button">
			<p>
				<br><%= photo_fields.label :name%> : 
				<%= photo_fields.text_field :name%><br><br>
    		</p>
    	</div>
    <%end%>

    
	<% @album.photos.each do |p|%>
		<%= image_tag p.avatar.url(:thumb) %>
	<%end%><br><br>

	<%= tag "input", { "type" => "button", "value" => "Add more photos", "onclick"=> "add()" } %>
	<br><br><%= f.submit%>
	
<% end %>
</fieldset>