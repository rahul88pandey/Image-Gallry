<h1>LISTING ALL ALBUMS</h1>
 
<table class="table table-bordered table table-hover table table-striped">
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>description</th>
    <th>user</th>
    <th>options</th>
  </tr>
 
  <% @albums.each do |album| %>
    <tr>
    <td><span class="badge">**</span></td>
      <td><%= album.name %></td>
      <td><%= album.description %></td>

      <td><%= current_user.email %></td>
      <td>
      <div class="btn btn-info"><%= link_to 'show' ,album_path(album) %></div>
        <div class="btn btn-default"><%= link_to 'edit' , edit_album_path(album) %></div>
        <div class="btn btn-danger"><%= link_to 'delete' , album, method: :delete %></div>
      </td>
    </tr>
  <% end %>
</table>